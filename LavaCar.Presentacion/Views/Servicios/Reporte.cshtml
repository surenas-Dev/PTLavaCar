@model PTLavaCar.Models.ServiciosViewModel

@{
    ViewData["Title"] = "Reporte de Servicio";
}

<h2 class="mb-4">
    <i class="fa fa-list"></i> Vehículos Asignados al Servicio: <strong>@Model.Descripcion</strong>
</h2>

<p><strong>Monto del servicio:</strong> ₡@Model.Monto</p>

@if (Model.VehiculosAsociados != null && Model.VehiculosAsociados.Any())
{
    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>Placa</th>
                <th>Dueño</th>
                <th>Marca</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var vehiculo in Model.VehiculosAsociados)
            {
                <tr>
                    <td>@vehiculo.Placa</td>
                    <td>@vehiculo.Dueno</td>
                    <td>@vehiculo.Marca</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">
        No hay vehículos asociados a este servicio.
    </div>
}

<a href="@Url.Action("Index", "Servicios")" class="btn btn-secondary mt-3">
    <i class="fa fa-arrow-left"></i> Volver a la lista de servicios
</a>
