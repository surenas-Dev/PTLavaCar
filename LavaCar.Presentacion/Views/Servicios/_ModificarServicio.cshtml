@model PTLavaCar.Models.ServiciosModel
@{
    Layout = null;
}

<form asp-action="Modificar" method="post" id="modificarForm">
    <input type="hidden" asp-for="ID_Servicio" />

    <div class="mb-3">
        <label class="form-label"><i class="fa fa-tag"></i> Descripción del Servicio</label>
        <input asp-for="Descripcion" class="form-control" placeholder="Ej: Lavado, Encerado..." />
        <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label"><i class="fa fa-money-bill"></i> Monto</label>
        <input asp-for="Monto" class="form-control" type="number" min="1" placeholder="Ej: 2500" />
        <span asp-validation-for="Monto" class="text-danger"></span>
    </div>

    <div class="modal-footer">
        <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i> Guardar Cambios</button>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal"><i class="fa fa-times"></i> Cancelar</button>
    </div>
</form>

<script>
    $.getScript("/lib/jquery-validation/dist/jquery.validate.min.js", function() {
        $.getScript("/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js");
    });
</script>