@{
    ViewData["Title"] = "Inicio";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="text-center mb-4">
        <h1 class="display-5 fw-bold"><i class="fa fa-car-side"></i> Bienvenido a LavaCar</h1>
        <p class="lead text-muted">Gestion de vehículos, servicios y asignaciones.</p>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-4">
            <div class="card text-white bg-primary mb-3 shadow">
                <div class="card-body text-center">
                    <i class="fa fa-car fa-2x mb-2"></i>
                    <h5 class="card-title">Vehículos</h5>
                    <a href="@Url.Action("Index", "Vehiculo")" class="btn btn-light mt-2">Ir a Vehículos</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-white bg-success mb-3 shadow">
                <div class="card-body text-center">
                    <i class="fa fa-cogs fa-2x mb-2"></i>
                    <h5 class="card-title">Servicios</h5>
                    <a href="@Url.Action("Index", "Servicios")" class="btn btn-light mt-2">Ir a Servicios</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-white bg-info mb-3 shadow">
                <div class="card-body text-center">
                    <i class="fa fa-link fa-2x mb-2"></i>
                    <h5 class="card-title">Asignaciones</h5>
                    <a href="@Url.Action("Index", "Vehiculo_Servicio")" class="btn btn-light mt-2">Ver Asignaciones</a>
                </div>
            </div>
        </div>
    </div>
</div>
